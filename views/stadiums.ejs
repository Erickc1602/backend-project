<%- include('header') -%>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Qatar Stadiums</title>
</head>
<body>
    <h1 style="font-size:50px; text-align: center; color: black;">Qatar World Cup Stadiums</h1>

<div class="container is-max-desktop">
    <%stadium.forEach(stadium => {%>
        <div style="background-color: cornsilk;"  class="notification">
            <h1><%= stadium.stadiumName %></h1>
            <img src="<%= stadium.pictureUrl %>" height="500px" width="800px">
            <h2> Capacity: <%= stadium.capacity %></h2>
           
            
          </div>
   <% }) %>
</div>
</body>
</html>